# Environment Variables for GraphicShop

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=graphic_shop
DB_USER=root
DB_PASSWORD=
DB_DIALECT=sqlite

# JWT Authentication
JWT_SECRET=replace_with_your_jwt_secret
JWT_EXPIRES_IN=7d

# Stripe Payment
STRIPE_PUBLIC_KEY=replace_with_your_public_key
STRIPE_SECRET_KEY=replace_with_your_secret_key
STRIPE_WEBHOOK_SECRET=replace_with_your_webhook_secret

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM=GraphicShop <noreply@graphicshop.com>

# Application URLs
BASE_URL=http://localhost:3000
