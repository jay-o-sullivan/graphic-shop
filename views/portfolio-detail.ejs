<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>

  <!-- SEO Meta Tags -->
  <meta name="description" content="<%= item.description %>">
  <meta name="keywords" content="<%= item.title.toLowerCase() %>, graphic design, <%= item.category %>">

  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <!-- Fix for missing images -->
  <script src="/js/fix-images.js"></script>
</head>
<body>
  <header class="header">
    <div class="container">
      <h1>GraphicShop</h1>
    </div>
  </header>

  <main class="container">
    <div class="breadcrumb">
      <a href="/">Home</a> / <a href="/portfolio">Portfolio</a> / <%= item.title %>
    </div>

    <div class="portfolio-showcase">
      <div class="showcase-header">
        <h1><%= item.title %></h1>
        <div class="showcase-meta">
          <div class="meta-item">
            <i class="fas fa-user"></i> Client: <%= item.client %>
          </div>
          <div class="meta-item">
            <i class="fas fa-folder"></i> Category: <%= item.category.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %>
          </div>
          <div class="meta-item">
            <i class="fas fa-calendar"></i> Completed: <%= item.completedDate %>
          </div>
        </div>
      </div>

      <div class="showcase-gallery">
        <img src="<%= item.imageUrl %>" alt="<%= item.title %>" class="main-image">

        <div class="image-thumbnails">
          <% if (item.images && item.images.length > 0) { %>
            <% item.images.forEach(image => { %>
              <div class="thumbnail">
                <img src="<%= image %>" alt="<%= item.title %> - Detail">
              </div>
            <% }) %>
          <% } %>
        </div>
      </div>

      <div class="showcase-content">
        <div class="content-section">
          <h2>Project Overview</h2>
          <p><%= item.fullDescription %></p>
        </div>

        <div class="content-section">
          <h2>The Challenge</h2>
          <p><%= item.challenge %></p>
        </div>

        <div class="content-section">
          <h2>Our Solution</h2>
          <p><%= item.solution %></p>
        </div>

        <div class="content-section">
          <h2>The Results</h2>
          <p><%= item.results %></p>
        </div>

        <% if (item.testimonial) { %>
          <div class="testimonial-box">
            <div class="quote-icon"><i class="fas fa-quote-left"></i></div>
            <blockquote>
              <%= item.testimonial.quote %>
            </blockquote>
            <div class="testimonial-author">
              <strong><%= item.testimonial.author %></strong>
              <% if (item.testimonial.position && item.testimonial.company) { %>
                <span><%= item.testimonial.position %>, <%= item.testimonial.company %></span>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>
    </div>

    <div class="portfolio-actions">
      <a href="/contact?service=<%= item.category %>" class="btn">Start a Similar Project</a>
      <a href="/portfolio" class="btn btn-outline">View All Work</a>
    </div>
  </main>

  <footer>
    <div class="container">
      <p>&copy; <%= new Date().getFullYear() %> GraphicShop. All rights reserved.</p>
    </div>
  </footer>

  <script>
    // Mobile menu toggle
    document.querySelector('.mobile-menu-btn').addEventListener('click', () => {
      document.querySelector('.nav-links').classList.toggle('active');
    });

    // Image gallery functionality
    document.querySelectorAll('.thumbnail img').forEach(thumb => {
      thumb.addEventListener('click', () => {
        const mainImage = document.querySelector('.main-image');
        const tempSrc = mainImage.src;
        mainImage.src = thumb.src;
        thumb.src = tempSrc;
      });
    });
  </script>

  <style>
    .breadcrumb {
      margin: 1.5rem 0;
      color: #666;
    }

    .breadcrumb a {
      color: var(--primary-color);
      text-decoration: none;
    }

    .showcase-header {
      margin-bottom: 2rem;
    }

    .showcase-meta {
      display: flex;
      flex-wrap: wrap;
      gap: 1.5rem;
      margin-top: 1rem;
    }

    .meta-item {
      color: #666;
    }

    .meta-item i {
      color: var(--primary-color);
      margin-right: 0.5rem;
    }

    .showcase-gallery {
      margin-bottom: 2rem;
    }

    .main-image {
      width: 100%;
      border-radius: var(--card-border-radius);
      margin-bottom: 1rem;
    }

    .image-thumbnails {
      display: flex;
      gap: 1rem;
      overflow-x: auto;
      padding-bottom: 0.5rem;
    }

    .thumbnail {
      width: 100px;
      height: 100px;
      flex-shrink: 0;
      cursor: pointer;
      border-radius: 4px;
      overflow: hidden;
      border: 2px solid transparent;
      transition: var(--transition);
    }

    .thumbnail:hover {
      border-color: var(--primary-color);
    }

    .thumbnail img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .showcase-content {
      margin-bottom: 2rem;
    }

    .content-section {
      margin-bottom: 1.5rem;
    }

    .testimonial-box {
      background-color: #f9f9f9;
      padding: 2rem;
      border-radius: var(--card-border-radius);
      position: relative;
      margin: 2rem 0;
    }

    .quote-icon {
      position: absolute;
      top: -15px;
      left: 30px;
      width: 40px;
      height: 40px;
      background-color: var(--primary-color);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    blockquote {
      margin: 0 0 1rem 0;
      font-style: italic;
    }

    .testimonial-author {
      display: flex;
      flex-direction: column;
    }

    .portfolio-actions {
      display: flex;
      gap: 1rem;
      margin: 2rem 0;
    }

    @media (max-width: 768px) {
      .showcase-meta {
        flex-direction: column;
        gap: 0.5rem;
      }

      .portfolio-actions {
        flex-direction: column;
      }
    }
  </style>
</body>
</html>
